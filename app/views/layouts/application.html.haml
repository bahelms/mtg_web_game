!!! 5
%html
  %head
    %title MTG Web Game
    = stylesheet_link_tag "application", media: "all", 
      data: { "turbolinks-track" => true }
    = javascript_include_tag "application", data: { "turbolinks-track" => true }
    = csrf_meta_tags

  %body
    - if user_signed_in?
      = render "layouts/header"
    - flash.each do |key, value|
      = flash_content(key, value)
    = yield

