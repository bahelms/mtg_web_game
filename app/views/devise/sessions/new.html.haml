.login_container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %div
      = f.email_field :email, autofocus: true, id: "email_login", 
        class: "login_input", placeholder: "email"
    %div
      = f.password_field :password, autocomplete: "off", id: "password_login", 
        class: "login_input", placeholder: "password"
    %div
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me, id: "remember_me_label"
      = button_tag "Sign In", class: "btn dark_button", id: "signin_button"

  %div#login_options
    = render "devise/shared/links"
    = link_to "New Account", new_registration_path(resource_name), 
      class: "btn"

