.login_container
  %h2 Sign In

  = form_for(resource, as: resource_name, url: session_path(resource_name), 
    html: { class: "login" }) do |f|
    %div
      = f.label :email, "Email:"
      = f.email_field :email, autofocus: true, id: "email_login"
    %div
      = f.label :password, "Password:"
      = f.password_field :password, autocomplete: "off", id: "password_login"
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me
    %div= f.submit "Sign In"

  = render "devise/shared/links"

